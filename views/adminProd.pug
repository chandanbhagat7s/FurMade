extends base
block content
    .container.my-3
        .row.row-cols-2.justify-content-center

            if products.length ==0 
                p.text NO PRODUCT IS HIDDEN.....

            else
                each product in products
                    .col.card.mb-2(style="max-width: 540px;")
                        .row.g-0
                            .col-md-4
                                img.img-fluid.rounded-start(src=`images/product/${product.coverImage}`, alt=`${product.productName} image`)
                            .col-md-8
                                .card-body
                                    h5.card-title.productName=product.productName
                                    p.card-text=product.discription
                                    p.card-text=` Price : â‚¹ ${product.price}` 

                                    a.btn.btn-outline-info(href=`productss/${product.slug}`  ) Details
                                    button.unhide-btn.btn.btn-outline-success(href=`productss/${product.slug}`  )  UNHIDE 
                                


















